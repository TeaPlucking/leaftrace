<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".viewIssueActivity">

    <ImageView
        android:id="@+id/imgageView3"
        android:layout_width="374dp"
        android:layout_height="649dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white" />

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/imageView34"
        android:layout_alignParentStart="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView34"
        android:layout_alignParentStart="true"
        android:layout_marginStart="249dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@drawable/cogwheel" />

    <TextView
        android:id="@+id/viewIssues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView3"
        android:layout_alignTop="@+id/imgageView3"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/oleo_script"
        android:text="View Issues"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vIssues"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewIssues"
        android:layout_alignStart="@+id/imgageView3"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:hint="issues"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>