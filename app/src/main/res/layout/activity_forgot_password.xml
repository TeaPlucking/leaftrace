<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPasswordActivity"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/imgageView5"
        android:layout_width="374dp"
        android:layout_height="649dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView44"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444"
        app:srcCompat="@drawable/white" />

    <Button
        android:id="@+id/calbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_alignBottom="@+id/imgageView4"
        android:layout_marginStart="232dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#888888"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toBottomOf="@+id/editname2" />

    <EditText
        android:id="@+id/editname2"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/green"
        tools:layout_editor_absoluteX="5dp" />

    <ImageView
        android:id="@+id/imageView46"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="@+id/imageView44"
        app:layout_constraintTop_toTopOf="@+id/imageView44"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        app:layout_constraintStart_toStartOf="@+id/imageView44"
        app:layout_constraintTop_toTopOf="@+id/imageView44"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        app:layout_constraintStart_toStartOf="@+id/imageView44"
        app:layout_constraintTop_toTopOf="@+id/imageView44"
        app:srcCompat="@drawable/cogwheel" />

    <ImageView
        android:id="@+id/imageView49"
        android:layout_width="57dp"
        android:layout_height="52dp"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toStartOf="@+id/imageView44"
        app:layout_constraintTop_toTopOf="@+id/imageView44"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/oleo_script"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toTopOf="@+id/imgageView5" />
</androidx.constraintlayout.widget.ConstraintLayout>