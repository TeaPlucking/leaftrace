<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".IssuesActivity">

    <ImageView
        android:id="@+id/imgageView"
        android:layout_width="374dp"
        android:layout_height="647dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView"
        android:layout_alignTop="@+id/imgageView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/oleo_script"
        android:text="Issues"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="311dp"
        android:layout_height="169dp"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/imgageView"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Wite your issue here ......"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/postbtn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextMultiLine2"
        android:layout_alignStart="@+id/imgageView"
        android:layout_marginStart="169dp"
        android:layout_marginTop="133dp"
        android:backgroundTint="#888888"
        android:text="Post"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/imageView24"
        android:layout_alignTop="@+id/imageView24"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView24"
        android:layout_alignParentStart="true"
        android:layout_marginStart="191dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/imageView24"
        android:layout_alignTop="@+id/imageView24"
        android:layout_marginStart="295dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/user" />

</RelativeLayout>