<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".loginScreenActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="661dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="35dp"
        app:srcCompat="@drawable/white" />

    <EditText
        android:id="@+id/password_input1"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName|textPassword"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#020202" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="290dp"
        android:layout_height="224dp"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="41dp"
        app:srcCompat="@drawable/img" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_below="@+id/forgetPwdBtn"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginStart="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#888888"
        android:fontFamily="@font/inknut_antiqua_bold"
        android:text="Login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inknut_antiqua"
        android:text="Don't have an account?"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/signupHerebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/textView8"
        android:clickable="true"
        android:fontFamily="@font/inknut_antiqua"
        android:text="Signup Here"
        android:textColor="#386ACA"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/oleo_script"
        android:text="Getting Started"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/oleo_script"
        android:text="Letâ€™s login for leaf  trace to continue"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="11dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_input"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:fontFamily="sans-serif"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_input"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="9dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/forgetPwdBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/password_input1"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="198dp"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="Forgot Password?"
        android:textColor="#F11111"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>