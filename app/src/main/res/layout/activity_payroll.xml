<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".payrollActivity">

    <ImageView
        android:id="@+id/imgageView2"
        android:layout_width="374dp"
        android:layout_height="649dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_alignTop="@+id/imgageView2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/oleo_script"
        android:text="Payroll"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/plkerid4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif"
        android:text="Pluckers Id"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput9"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plkerid4"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/plkerid5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameInput9"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="Pluckers Id"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput10"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plkerid5"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/plkerid6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameInput10"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="38dp"
        android:fontFamily="sans-serif"
        android:text="Bonus"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput11"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plkerid6"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/calbtn"
        android:layout_width="182dp"
        android:layout_height="64dp"
        android:layout_below="@+id/nameInput11"
        android:layout_alignStart="@+id/imgageView2"
        android:layout_marginStart="101dp"
        android:layout_marginTop="52dp"
        android:text="Calculate"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>