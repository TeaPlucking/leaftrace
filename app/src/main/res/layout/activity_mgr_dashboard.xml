<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".mgrDashboardActivity">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="374dp"
        android:layout_height="649dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white" />

    <TextView
        android:id="@+id/hello_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_alignTop="@+id/imageView13"
        android:layout_marginStart="23dp"
        android:layout_marginTop="38dp"
        android:text="Hello,"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/name_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView13"
        android:layout_alignTop="@+id/imageView13"
        android:layout_marginStart="20dp"
        android:layout_marginTop="71dp"
        android:text="Manager"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/hello_txt" />

    <ImageView
        android:id="@+id/payment_img2"
        android:layout_width="152dp"
        android:layout_height="96dp"
        android:layout_below="@+id/name_txt2"
        android:layout_alignStart="@+id/imageView13"
        android:layout_marginStart="30dp"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/name_txt"
        app:srcCompat="@drawable/payment" />

    <TextView
        android:id="@+id/payroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_img2"
        android:layout_alignStart="@+id/payment_img2"
        android:layout_marginStart="48dp"
        android:layout_marginTop="1dp"
        android:text="Payroll"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/payment_img" />

    <TextView
        android:id="@+id/updatearea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/areaimg2"
        android:layout_alignEnd="@+id/areaimg2"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="7dp"
        android:text="Update Area"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/areaimg" />

    <ImageView
        android:id="@+id/areaimg2"
        android:layout_width="126dp"
        android:layout_height="90dp"
        android:layout_below="@+id/name_txt2"
        android:layout_alignEnd="@+id/imageView13"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/name_txt"
        app:srcCompat="@drawable/area" />

    <ImageView
        android:id="@+id/issue_img2"
        android:layout_width="138dp"
        android:layout_height="116dp"
        android:layout_below="@+id/recweight"
        android:layout_alignStart="@+id/imageView13"
        android:layout_marginStart="140dp"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:srcCompat="@drawable/issues" />

    <TextView
        android:id="@+id/chkissues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issue_img2"
        android:layout_alignStart="@+id/issue_img2"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-3dp"
        android:text="Check Issues"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/issue_img" />

    <ImageView
        android:id="@+id/chkweight"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_below="@+id/updatearea"
        android:layout_alignEnd="@+id/imageView13"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="101dp"
        tools:srcCompat="@drawable/weight" />

    <TextView
        android:id="@+id/recweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkweight"
        android:layout_alignEnd="@+id/chkweight"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="6dp"
        android:text="Record Weight"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/issue_img" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignStart="@+id/imageView15"
        android:layout_marginStart="41dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignStart="@+id/imageView15"
        android:layout_marginStart="217dp"
        android:layout_marginTop="-3dp"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="312dp"
        android:layout_marginTop="-2dp"
        app:srcCompat="@drawable/cogwheel" />

</RelativeLayout>