<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".about_activity">

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="625dp"
        android:layout_above="@+id/imageView44"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/oleo_script"
        android:text="About"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/inknut_antiqua"
        android:text=" The purpose of this app is to introduce an easy and a better method for the tea pluckers and other employers involved with it. So here our development team has come up with idea about a tea plucking tracking mobile application. that can be used in a tea manufacturing factory. This mobile Application will  help in tracking and monitoring the tea plucking process and ease the work of  the tea pluckers and save time of the company workers. And also this  application provides a platform for tea pluckers to record their activities and  track the tea leaves from the point of plucking to processing. The aim of this  mobile application is to the work load of users and increase the productivity of  the factory. "
        android:textColor="#000000"
        android:textSize="16sp"
        app:lineHeight="23sp" />

    <ImageView
        android:id="@+id/imageView47"
        android:layout_width="49dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/imageView44"
        android:layout_alignTop="@+id/imageView44"
        android:layout_marginStart="44dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView44"
        android:layout_alignParentStart="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView49"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/imageView44"
        android:layout_alignParentStart="true"
        android:layout_marginStart="301dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/user" />

</RelativeLayout>