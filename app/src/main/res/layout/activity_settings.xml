<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".settingsActivity">

    <ImageView
        android:id="@+id/imgageView4"
        android:layout_width="374dp"
        android:layout_height="649dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_alignTop="@+id/imgageView4"
        android:layout_marginStart="33dp"
        android:layout_marginTop="34dp"
        android:text="Settings"
        android:textSize="30dp"
        android:fontFamily="@font/oleo_script"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_marginStart="99dp"
        android:layout_marginTop="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView39"
        android:layout_marginStart="-27dp"
        android:layout_marginTop="-30dp"
        android:layout_toEndOf="@+id/imageView39"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floatingActionButton"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_alignEnd="@+id/imgageView4"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:hint="Name"
        android:textAlignment="center"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:hint="Name"/>

    <EditText
        android:id="@+id/editemail"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editname"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:hint="Email"/>

    <EditText
        android:id="@+id/edittel"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editemail"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:hint="Tel No"/>

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittel"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:hint="New Password"/>

    <Button
        android:id="@+id/calbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView4"
        android:layout_alignBottom="@+id/imgageView4"
        android:layout_marginStart="149dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#888888"
        android:text="Save changes"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="335dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/cogwheel" />

    <ImageView
        android:id="@+id/imageView41"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="234dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/user" />
</RelativeLayout>