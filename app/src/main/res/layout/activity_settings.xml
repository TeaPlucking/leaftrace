<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsActivity"
    android:background="@drawable/gradient_background">


    <ImageView
        android:id="@+id/imgageView6"
        android:layout_width="374dp"
        android:layout_height="647dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white" />

    <EditText
        android:id="@+id/password"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telno"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#504F4F"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floatingActionButton"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#504F4F"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <EditText
        android:id="@+id/email"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#504F4F"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <EditText
        android:id="@+id/telno"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/round_btn"
        android:ems="10"
        android:hint="Tel No"
        android:inputType="phone"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#504F4F"
        app:layout_constraintStart_toStartOf="@+id/imgageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="3dp"
        android:clickable="true"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
        app:srcCompat="@drawable/message" />

    <ImageView
        android:id="@+id/imageView41"
        android:layout_width="61dp"
        android:layout_height="52dp"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView33"
        android:layout_alignParentStart="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/cogwheel" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_alignTop="@+id/imgageView6"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/oleo_script"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_marginStart="112dp"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/propic" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView43"
        android:layout_marginStart="-28dp"
        android:layout_marginTop="-26dp"
        android:layout_toEndOf="@+id/imageView43"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/imgageView6"
        android:layout_marginStart="165dp"
        android:layout_marginTop="23dp"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="#888888"/>
</RelativeLayout>